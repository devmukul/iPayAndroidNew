<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_button"
            android:background="@drawable/background_final_home"
            android:orientation="vertical"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/activity_horizontal_margin_double"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <RelativeLayout
                        android:id="@+id/profile_picture_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <ProgressBar
                            android:id="@+id/circular_progress_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/profile_picture_progress_bar"
                            android:secondaryProgress="100" />

                        <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="@dimen/value50"
                            android:layout_height="@dimen/value50"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                        </bd.com.ipay.ipayskeleton.CustomView.ProfileImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin_semi_double"
                        android:layout_toRightOf="@+id/profile_picture_holder">

                        <LinearLayout
                            android:id="@+id/name_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/show_qr_code_button"
                            android:layout_toStartOf="@+id/show_qr_code_button"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/value2"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_size_small_medium_value18" />

                            <ImageView
                                android:id="@+id/verification_status"
                                android:layout_width="@dimen/value15"
                                android:layout_height="@dimen/value15"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
                                android:src="@drawable/ic_not_verified" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textview_mobile_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name_layout"
                            android:layout_marginBottom="@dimen/value2"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_small" />

                        <ImageView
                            android:id="@+id/show_qr_code_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:padding="@dimen/activity_horizontal_margin_card"
                            android:src="@drawable/ic_qr_code_home" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_completion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value80"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:visibility="gone">

                    <bd.com.ipay.ipayskeleton.CustomView.CircularProgressBar
                        android:id="@+id/profile_completion_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin_card"
                        android:paddingTop="@dimen/activity_vertical_margin_card">

                    </bd.com.ipay.ipayskeleton.CustomView.CircularProgressBar>

                    <TextView
                        android:id="@+id/profile_completion_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
                        android:layout_marginRight="@dimen/activity_horizontal_margin_card"
                        android:layout_toRightOf="@+id/profile_completion_percentage"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small" />

                    <ImageButton
                        android:id="@+id/button_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/activity_vertical_margin_card"
                        android:src="@drawable/ic_close_black_24dp"
                        android:tint="@color/colorPrimary" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="@dimen/activity_horizontal_margin_double"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/balance_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/ipay_balance"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/balance_label"
                        android:fontFamily="sans-serif-thin"
                        android:paddingBottom="@dimen/activity_horizontal_margin_card"
                        android:text="@string/loading"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/refresh_balance_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/white"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin_card"
                    android:src="@drawable/ic_home_refresh" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/value1"
                android:background="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_add_money"
                    style="@style/HomeBalanceButtonBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />

                    <TextView
                        style="@style/HomeBalanceButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_money" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/value1"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark" />

                <LinearLayout
                    android:id="@+id/button_withdraw_money"
                    style="@style/HomeBalanceButtonBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_withdraw" />

                    <TextView
                        style="@style/HomeBalanceButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_money" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/HomeDividerStyleColorGrey" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white">

                <LinearLayout
                    android:id="@+id/button_send_money"
                    style="@style/HomeImageLinearLayoutStyleHorizontal"
                    android:layout_weight="1">

                    <TextView
                        style="@style/HomeImageLinearLayoutTextStyleHorizontal"
                        android:drawableTop="@drawable/background_icon_send_money"
                        android:text="@string/send_money" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/value1"
                    android:layout_height="match_parent"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:id="@+id/button_request_money"
                    style="@style/HomeImageLinearLayoutStyleHorizontal"
                    android:layout_weight="1">

                    <TextView
                        style="@style/HomeImageLinearLayoutTextStyleHorizontal"
                        android:drawableTop="@drawable/background_icon_request_money"
                        android:text="@string/request_money" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/HomeDividerStyleColorGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white">

                <LinearLayout
                    android:id="@+id/button_mobile_topup"
                    style="@style/HomeImageLinearLayoutStyleHorizontal"
                    android:layout_weight="1">

                    <TextView
                        style="@style/HomeImageLinearLayoutTextStyleHorizontal"
                        android:drawableTop="@drawable/background_icon_topup"
                        android:text="@string/mobile_topup" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/value1"
                    android:layout_height="match_parent"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:id="@+id/button_make_payment"
                    style="@style/HomeImageLinearLayoutStyleHorizontal"
                    android:layout_weight="1">

                    <TextView
                        style="@style/HomeImageLinearLayoutTextStyleHorizontal"
                        android:drawableTop="@drawable/background_icon_make_payment"
                        android:text="@string/make_payment" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


