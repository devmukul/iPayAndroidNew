<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/description_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_card"
        android:layout_marginTop="@dimen/activity_horizontal_margin_card">

        <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
            android:id="@+id/profile_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/request_name"
            style="@style/TextStylePrimaryMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_picture"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amount"
            style="@style/TextStylePrimarySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_name"
            android:layout_toRightOf="@+id/profile_picture"
            android:gravity="left" />

        <TextView
            android:id="@+id/time"
            style="@style/TextStylePrimarySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_toRightOf="@+id/profile_picture" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/value6"
            android:layout_marginRight="@dimen/activity_horizontal_margin_card"
            android:layout_marginTop="@dimen/value6"
            android:clickable="true"
            android:padding="@dimen/value5"
            android:src="@drawable/ic_error_black_24dp"
            android:tint="@color/background_red" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/description_holder"
        android:background="@color/colorDivider" />

</RelativeLayout>