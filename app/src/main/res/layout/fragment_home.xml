<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/account_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="14dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="0dp"
                        android:paddingTop="14dp">

                        <TextView
                            android:id="@+id/tv_ballabel"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="iPay Balance"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/balance"
                            style="@style/TextStylePrimaryLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/balance_placeholder_not_available"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/balanceCurrency"
                            style="@style/TextStylePrimaryLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/balance"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/balance"
                            android:text="BDT"
                            android:textColor="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/iv_balance_overflow"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="8dp"
                            android:src="@drawable/ic_more_vert_black_48dp" />

                        <ImageView
                            android:id="@+id/refresh_balance_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/iv_balance_overflow"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="8dp"
                            android:src="@drawable/ic_refresh_black_48dp" />


                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_send_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/button_send_money"
                            style="@style/HomeImageButtonStyle"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/money_bag" />

                        <TextView
                            style="@style/HomeImageTextViewStyle"
                            android:layout_below="@+id/button_send_money"
                            android:text="@string/send_money" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_request_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/button_request_money"
                            style="@style/HomeImageButtonStyle"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/money_request" />

                        <TextView
                            style="@style/HomeImageTextViewStyle"
                            android:layout_below="@+id/button_request_money"
                            android:text="@string/request_money" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_create_invoice_or_mobile_recharge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.34"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/button_make_payment"
                            style="@style/HomeImageButtonStyle"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/cell_phone" />

                        <TextView
                            android:id="@+id/textview_make_payment_or_recharge"
                            style="@style/HomeImageTextViewStyle"
                            android:layout_below="@+id/button_make_payment"
                            android:text="@string/topup" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <bd.com.ipay.ipayskeleton.Customview.CustomSwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_transaction_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </bd.com.ipay.ipayskeleton.Customview.CustomSwipeRefreshLayout>

    </LinearLayout>

</com.flipboard.bottomsheet.BottomSheetLayout>