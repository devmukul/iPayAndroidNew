<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:ignore="Autofill">

    <!--To prevent EditText from gaining focus, focusable has been set to true -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/value32"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/account_type_business_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/card"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/icon_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="@font/open_sans_light"
            android:text="Verification Code"
            android:textColor="#212121"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value8"
            android:fontFamily="@font/open_sans"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="@string/otp_going_to_send_sign_up" />

        <TextView
            android:id="@+id/buttonResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#21c5b6"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="@dimen/value16"
            android:text="Resend Verification Code" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value24"
            android:orientation="vertical">

            <com.chaos.view.PinView
                android:id="@+id/otp_edittext"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cursorWidth="2dp"
                app:itemCount="6"
                app:itemHeight="40dp"
                app:itemRadius="4dp"
                app:itemSpacing="10dp"
                app:itemWidth="38dp"
                app:lineColor="#eaeaea"
                app:lineWidth="2dp"
                app:viewType="rectangle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/value24"
                android:layout_marginBottom="@dimen/value24">

                <requestFocus />
            </com.chaos.view.PinView>



            <Button
                android:id="@+id/buttonVerifyOTP"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value24"
                android:text="Continue" />


            <TextView
                android:id="@+id/txt_timer"
                style="@style/TextStylePrimaryMedium"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:gravity="bottom|center"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="@string/resend_otp_description" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>