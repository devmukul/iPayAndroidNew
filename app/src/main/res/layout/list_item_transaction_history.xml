<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value5"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/value10"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/value10">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_transaction_history"
        app:riv_border_color="@color/colorPrimary"
        app:riv_corner_radius="50dip"
        app:riv_oval="false" />

    <LinearLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/status_layout"
        android:layout_toRightOf="@+id/portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_description"
            style="@style/TextStylePrimarySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Description" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_description"
            android:text="Time"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/value5"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/status"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_error_black_24dp"
                android:tint="@color/background_red" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>