<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@color/colorBackground"
            android:visibility="gone">

            <TextView
                android:id="@+id/balance_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorPaymentReviewSecondaryText"
                android:text="@string/ipay_balance"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/balance_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_extra_large"
                android:textColor="@color/colorPaymentReviewPrimaryText"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/balance_title_view"
                android:layout_toLeftOf="@+id/tk_view"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/tk_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_alignTop="@+id/balance_view"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/colorPaymentReviewPrimaryText"
                android:text="@string/tk"
                android:layout_marginTop="@dimen/value5"
                android:layout_marginLeft="@dimen/value4"
                android:fontFamily="sans-serif-medium"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                android:id="@+id/profile_picture"
                style="@style/ReviewImageStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_name"
                    style="@style/TextViewUserInfoPaymentReviewPrimary"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/textview_mobile_number"
                    style="@style/TextViewUserInfoPaymentReviewSecondary" />

            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/mobile_number_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">


            <bd.com.ipay.ipayskeleton.CustomView.BusinessContactsSearchView
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:inputType="text"
                android:maxLines="1" />

            <LinearLayout
                android:id="@+id/right_side_icon_view_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/button_scan_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/value5"
                    android:layout_marginRight="@dimen/value5"
                    android:src="@drawable/ic_qr_input"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/select_receiver_from_contacts"
                    style="@style/ButtonStyleWithIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_book3x" />
            </LinearLayout>

            <View style="@style/Divider"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CustomTextInputLayout">

            <EditText
                android:id="@+id/amount"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_amount"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <View style="@style/Divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CustomTextInputLayout">

            <EditText
                android:id="@+id/reference_number"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reference_number_optional"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <View style="@style/Divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CustomTextInputLayout">

            <EditText
                android:id="@+id/description"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/note"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <View style="@style/Divider" />

        <Button
            android:id="@+id/button_payment"
            style="@style/ButtonPrimaryWithNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_send_money" />

        <TextView
            style="@style/CustomNoteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/make_payment_description_info" />
    </LinearLayout>
</ScrollView>
