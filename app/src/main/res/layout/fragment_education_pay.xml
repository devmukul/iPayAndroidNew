<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/layout_progress_container" />

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/pay_now_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rounded_white"
            android:paddingTop="@dimen/value10"
            android:visibility="gone">

            <TextView
                android:id="@+id/items_added_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/ask_for_recommendation"
                android:textColor="@color/background_red" />

            <ImageView
                android:id="@+id/pay_now_button"
                style="@style/ButtonStyleWithIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:padding="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_contactw" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_payables"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pay_now_layout"
            android:layout_marginTop="@dimen/activity_horizontal_margin_card" />

        <TextView
            android:id="@+id/empty_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="@string/empty_payable_list" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_create_payable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_add_black_24dp"
            app:backgroundTint="@color/background_fab"
            app:borderWidth="0dp"
            app:elevation="4dp"
            app:fabSize="normal" />
    </RelativeLayout>
</LinearLayout>