<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/value8"
        android:paddingBottom="@dimen/value8">

        <TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#666666"
            android:textSize="10sp"
            android:text="@string/verification_information_required"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:textColor="#666666"
            android:textSize="10sp"
            android:text="1/1"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value1"
        android:background="#EEEEEE">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/profile_completion_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/other_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_card"
            android:layout_marginBottom="@dimen/activity_vertical_margin_card"
            android:src="@drawable/profile_completation_img" />

        <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin_card"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_card"
            android:layout_toRightOf="@+id/other_image"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/loading">

            <TextView
                android:id="@+id/profile_completion_msg_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="13sp"
                android:textColor="@color/colorPaymentReviewPrimaryText"/>

            <TextView
                android:id="@+id/profile_completion_subtitle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textColor="@color/colorPaymentReviewSecondaryText"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:src="@drawable/pending"/>



    </RelativeLayout>

</LinearLayout>

