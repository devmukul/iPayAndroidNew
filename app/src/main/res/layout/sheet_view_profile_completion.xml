<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_completion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/profile_completion_message"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Your profile is X% complete. Complete your profile to get verified."/>

    <LinearLayout
        android:id="@+id/button_holder"
        android:orientation="horizontal"
        android:layout_below="@+id/profile_completion_message"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="?android:attr/actionBarSize">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complete_profile"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/complete_now" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complete_later"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/later" />
    </LinearLayout>
</RelativeLayout>