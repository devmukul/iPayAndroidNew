<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="bd.com.ipay.ipayskeleton.camera.CameraActivity">

    <bd.com.ipay.ipayskeleton.camera.CameraSourcePreview
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/capture_layout">

        <bd.com.ipay.ipayskeleton.camera.CameraOverlay
            android:id="@+id/face_tracking_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </bd.com.ipay.ipayskeleton.camera.CameraSourcePreview>

    <RelativeLayout
        android:id="@+id/capture_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/value20"
        android:layout_marginTop="@dimen/value20"
        android:background="@color/colorBlack">

        <ImageView
            android:id="@+id/capture_button"
            android:layout_width="@dimen/value80"
            android:layout_height="@dimen/value80"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/value20"
            android:background="@drawable/circle"
            android:text="capture" />

        <ImageView
            android:id="@+id/camera_change_button"
            android:layout_width="@dimen/value50"
            android:layout_height="@dimen/value50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/value30"
            android:src="@drawable/ic_cached_white_24dp" />

        <ImageView
            android:id="@+id/flash_button"
            android:layout_width="@dimen/value40"
            android:layout_height="@dimen/value40"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/value30"
            android:layout_marginTop="@dimen/value20"
            android:src="@drawable/ic_flash_off_white_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ok_button"
            android:layout_width="@dimen/value60"
            android:layout_height="@dimen/value50"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/value40"
            android:layout_marginTop="@dimen/value30"
            android:src="@drawable/ic_done_white_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/cross_button"
            android:layout_width="@dimen/value60"
            android:layout_height="@dimen/value50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/value40"
            android:layout_marginTop="@dimen/value30"
            android:src="@drawable/ic_clear_white_24dp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
