<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/view_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/button_send_money"
            style="@style/SheetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:text="@string/send_money" />

        <Button
            android:id="@+id/button_request_money"
            style="@style/SheetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_transfer_within_a_station_black_24dp"
            android:text="@string/request_money" />

        <Button
            android:id="@+id/button_ask_for_recommendation"
            style="@style/SheetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fingerprint_black_24dp"
            android:text="@string/ask_for_recommendation" />

    </LinearLayout>

</LinearLayout>