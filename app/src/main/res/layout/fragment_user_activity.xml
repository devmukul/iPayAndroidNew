<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        style="@style/ListHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/money_request_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_log"
            android:textColor="@color/zxinglib_status_text"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/fromEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/from_date"
                    android:imeOptions="actionUnspecified"
                    android:inputType="date"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/fromDatePicker"
                style="@style/ButtonStyleAccentSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:padding="@dimen/value5"
                android:src="@drawable/ic_perm_contact_calendar_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/toEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/to_date"
                    android:imeOptions="actionUnspecified"
                    android:inputType="date"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/toDatePicker"
                style="@style/ButtonStyleAccentSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:padding="@dimen/value5"
                android:src="@drawable/ic_perm_contact_calendar_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value10"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value25"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_clear_filter_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/value5"
                    android:text="@string/clear_filter"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/colorDivider" />

                <Button
                    android:id="@+id/button_filter_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/value5"
                    android:text="@string/filter"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_filters_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/filter_profile_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_profile_change" />

        <CheckBox
            android:id="@+id/filter_money_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_received_money" />

        <CheckBox
            android:id="@+id/filter_money_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_sent_money" />

        <CheckBox
            android:id="@+id/filter_verification_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_verification" />

        <CheckBox
            android:id="@+id/filter_security_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_security_changes" />

        <CheckBox
            android:id="@+id/filter_system_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_system_event" />

        <Button
            android:id="@+id/button_clear_filter_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:text="@string/clear_filter"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </LinearLayout>

    <bd.com.ipay.ipayskeleton.CustomView.CustomSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_white"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
        android:layout_marginRight="@dimen/activity_horizontal_margin_card">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_recent_activity_logs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </bd.com.ipay.ipayskeleton.CustomView.CustomSwipeRefreshLayout>

</LinearLayout>