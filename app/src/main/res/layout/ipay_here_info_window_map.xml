<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/semiround_white_default">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:src="@drawable/ic_business_logo_round"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/activity_horizontal_margin_card"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/profile_picture"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_name"
            android:text="IPay Systems Ltd"
            android:textColor="@color/colorPaymentReviewPrimaryText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textview_address_line_1"
            style="@style/TextViewUserInfoPaymentReviewSecondary"
            android:gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textview_address_line_2"
            style="@style/TextViewUserInfoPaymentReviewSecondary"
            android:gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textview_address_line_3"
            style="@style/TextViewUserInfoPaymentReviewSecondary"
            android:gravity="center_horizontal"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>