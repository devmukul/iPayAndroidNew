<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value12"
        android:layout_marginBottom="@dimen/value12">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/bank_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/train_ticket"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/bank_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/value8">

            <TextView
                android:id="@+id/train_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#888888"
                tools:text="7:00"
                android:drawableLeft="@drawable/clock_circular_outline"
                android:drawablePadding="@dimen/value5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/train_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:lineSpacingExtra="8sp"
                    tools:text="MAHANAGAR_PROVATI - 788"
                    android:layout_toLeftOf="@+id/ticket_class"/>

                <TextView
                    android:id="@+id/ticket_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="8sp"
                    android:gravity="end"
                    tools:text="SNIGDHA"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/edit_small"
                    android:drawablePadding="@dimen/value5"/>
            </RelativeLayout>

            <Button
                android:id="@+id/bank_account_pending_button"
                android:text="Find Ticket"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/background_button_only_border_thin"
                android:textSize="12.0sp"
                android:textColor="#333333"
                android:gravity="center"
                android:textAllCaps="false"
                android:paddingLeft="@dimen/value10"
                android:paddingRight="@dimen/value10"
                android:layout_marginTop="@dimen/value10"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33acacac"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="58dp"></LinearLayout>

</RelativeLayout>