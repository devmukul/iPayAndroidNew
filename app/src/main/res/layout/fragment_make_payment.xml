<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/balance_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:text="@string/ipay_balance"
                android:textColor="@color/colorPaymentReviewSecondaryText"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/balance_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/tk_view"
                android:layout_toRightOf="@+id/balance_title_view"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:textColor="@color/colorPaymentReviewPrimaryText"
                android:textSize="@dimen/text_size_extra_large" />

            <TextView
                android:id="@+id/tk_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/balance_view"
                android:layout_marginLeft="@dimen/value4"
                android:layout_marginTop="@dimen/value5"
                android:fontFamily="sans-serif-medium"
                android:gravity="left"
                android:text="@string/tk"
                android:textColor="@color/colorPaymentReviewPrimaryText"
                android:textSize="@dimen/text_size_mini" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:animateLayoutChanges="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/edit_icon_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin_semi_double"
                android:paddingRight="@dimen/activity_horizontal_margin_semi_double"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_editgrey" />

            <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                android:id="@+id/profile_picture"
                style="@style/PaymentReviewImageStyleLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_name"
                    style="@style/TextViewUserInfoPaymentReviewPrimary"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/textview_mobile_number"
                    style="@style/TextViewUserInfoPaymentReviewSecondary"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textview_address_line_1"
                    style="@style/TextViewUserInfoPaymentReviewSecondary"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textview_address_line_2"
                    style="@style/TextViewUserInfoPaymentReviewSecondary"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textview_address_line_3"
                    style="@style/TextViewUserInfoPaymentReviewSecondary"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_number_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mobile_number_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">


                <bd.com.ipay.ipayskeleton.CustomView.BusinessContactsSearchView
                    android:id="@+id/mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:inputType="text"
                    android:maxLines="1" />

                <LinearLayout
                    android:id="@+id/right_side_icon_view_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/button_scan_qr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/value5"
                        android:layout_marginRight="@dimen/value5"
                        android:padding="@dimen/value5"
                        android:src="@drawable/ic_qr_input"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/select_receiver_from_contacts"
                        style="@style/ButtonStyleWithIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/value5"
                        android:src="@drawable/ic_book3x" />
                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/Divider"
                android:layout_alignParentBottom="true" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CustomTextInputLayout">

            <EditText
                android:id="@+id/amount"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_amount"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <View style="@style/Divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CustomTextInputLayout">

            <EditText
                android:id="@+id/reference_number"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reference_number_optional"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <View style="@style/Divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CustomTextInputLayout">

            <EditText
                android:id="@+id/description"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/note"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <View style="@style/Divider" />

        <Button
            android:id="@+id/button_payment"
            style="@style/ButtonPrimaryWithNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_send_money" />

        <TextView
            style="@style/CustomNoteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/make_payment_description_info" />
    </LinearLayout>
</ScrollView>
