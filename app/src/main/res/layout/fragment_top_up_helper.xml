<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:fillViewport="true"
    tools:background="@drawable/background_transaction">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value24"
            android:layout_gravity="left"
            android:layout_marginLeft="44dp"
            android:contentDescription="@string/send_money_helper_text"
            android:src="@drawable/ic_top_up_screenshot" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value20"
            android:layout_marginLeft="@dimen/value36"
            android:layout_marginRight="@dimen/value36"
            android:lineSpacingExtra="4dp"
            android:text="@string/send_money_helper_text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_small_medium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/value48"
            android:layout_marginRight="@dimen/value48"
            android:drawableLeft="@drawable/drawable_left_tick"
            android:drawablePadding="@dimen/value10"
            android:drawableStart="@drawable/drawable_left_tick"
            android:lineSpacingExtra="2dp"
            android:text="@string/top_up_step_one"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/value48"
            android:layout_marginRight="@dimen/value48"
            android:drawableLeft="@drawable/drawable_left_tick"
            android:drawablePadding="@dimen/value10"
            android:drawableStart="@drawable/drawable_left_tick"
            android:lineSpacingExtra="2dp"
            android:text="@string/top_up_step_two"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/value48"
            android:layout_marginRight="@dimen/value48"
            android:drawableLeft="@drawable/drawable_left_tick"
            android:drawablePadding="@dimen/value10"
            android:drawableStart="@drawable/drawable_left_tick"
            android:lineSpacingExtra="2dp"
            android:text="@string/send_money_step_three"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
