<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/sponsor_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value28">

            <RadioButton
                android:id="@+id/radio_sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value16"
                android:layout_marginRight="@dimen/value8" />

            <TextView
                android:id="@+id/sponsor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:lineSpacingExtra="4sp"
                android:textColor="#212121"
                android:textSize="14sp"
                android:text="iPay User as Fund" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/beneficiary_layout"
            android:layout_below="@+id/sponsor_layout"
            android:layout_marginBottom="@dimen/value24"
            android:layout_marginTop="@dimen/value12">

            <RadioButton
                android:id="@+id/beneficiary_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value16"
                android:layout_marginRight="@dimen/value8" />

            <TextView
                android:id="@+id/beneficiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:lineSpacingExtra="4sp"
                android:textColor="#212121"
                android:textSize="14sp"
                android:text="Me as others source of fund" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>