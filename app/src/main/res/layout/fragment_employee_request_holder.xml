<com.flipboard.bottomsheet.BottomSheetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center_vertical|center_horizontal">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invite_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value20"
                android:id="@+id/info_text"
                android:text="@string/invite_manager_info_text"
                android:gravity="center"/>

            <Button
                android:id="@+id/invite_employee_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonPrimaryWithNote"
                android:text="@string/invite_people"
                android:layout_below="@+id/info_text"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/manager_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/transaction_history_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_card"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/background_contact_selector_background"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RadioGroup
                        android:id="@+id/employee_request_radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_button_general"
                            style="@style/ContactsSelectorStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_left_round_checkbox"
                            android:text="@string/pending"
                            android:textColor="@color/radio_button_text_color" />

                        <RadioButton
                            android:id="@+id/radio_button_accepted"
                            style="@style/ContactsSelectorStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_right_round_checkbox"
                            android:text="@string/accepted"
                            android:textColor="@color/radio_button_text_color" />

                    </RadioGroup>

                </LinearLayout>
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/fragment_container_notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/transaction_history_header"
                android:layout_above="@+id/invite_employee"/>


            <Button
                android:id="@+id/invite_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonPrimaryWithNote"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/invite_people"/>

        </RelativeLayout>

    </FrameLayout>



</com.flipboard.bottomsheet.BottomSheetLayout>