<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
        android:id="@+id/profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

    <ImageView
        android:id="@+id/other_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin_card"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin_card"
        android:layout_toRightOf="@+id/profile_picture"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_description"
                style="@style/TransactionHistoryLeftTextViewStyle"
                android:layout_toLeftOf="@+id/status_description"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_description"
                style="@style/TransactionHistoryRightTextViewStyle" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value2">

            <TextView
                android:id="@+id/receiver"
                style="@style/TransactionHistoryLeftTextViewStyle"
                android:layout_toLeftOf="@+id/net_amount" />

            <TextView
                android:id="@+id/net_amount"
                style="@style/TransactionHistoryRightTextViewStyle"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time"
                style="@style/TransactionHistoryLeftTextViewStyle"
                android:textColor="@color/colorBlackTransparent"
                android:textSize="11sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_alignParentBottom="true" />

</RelativeLayout>