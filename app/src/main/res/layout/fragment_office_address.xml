<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_progress_container" />

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/office_info_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AddressViewHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_info" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/button_edit_office_information"
                    style="@style/EditIconButton"
                    android:padding="@dimen/activity_vertical_margin_card"
                    android:src="@drawable/ic_editgrey" />
            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutHolder">

                <TextView
                    style="@style/TextViewInfoLabel"
                    android:text="@string/business_name" />

                <TextView
                    android:id="@+id/textview_business_name"
                    style="@style/TextViewInfoColorPrimary" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutHolder">

                <TextView
                    style="@style/TextViewInfoLabel"
                    android:text="@string/mobile_number" />

                <TextView
                    android:id="@+id/textview_business_mobile_number"
                    style="@style/TextViewInfoColorPrimary" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutHolder">

                <TextView
                    style="@style/TextViewInfoLabel"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/textview_business_email"
                    style="@style/TextViewInfoColorPrimary" />

            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutHolder">

                <TextView
                    style="@style/TextViewInfoLabel"
                    android:text="@string/business_type" />

                <TextView
                    android:id="@+id/textview_business_type"
                    style="@style/TextViewInfoColorPrimary" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/divider_space"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin_card"

                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/office_address_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AddressViewHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_address" />

                    <TextView
                        android:id="@+id/textview_office_address"
                        style="@style/ProfileAddressTextStyle" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/button_edit_office_address"
                    style="@style/EditIconButton"
                    android:padding="@dimen/activity_vertical_margin_card"
                    android:src="@drawable/ic_editgrey" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>