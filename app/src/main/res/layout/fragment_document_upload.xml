<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <!-- National ID -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_national_id"
            style="@style/DocumentUploadLabel"
            android:text="National ID"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_national_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/label_national_id"
            android:layout_toLeftOf="@+id/button_national_id">

            <EditText
                android:id="@+id/edit_text_national_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="National ID Number"
                android:imeOptions="actionUnspecified"
                android:singleLine="true"
                android:inputType="number"
                android:layout_below="@+id/label_national_id"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_national_id"
            style="@style/DocumentUploadButton"
            android:text="UPLOAD"
            android:layout_alignBottom="@+id/text_input_national_id" />
    </RelativeLayout>


    <!-- Passport -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/label_passport"
            style="@style/DocumentUploadLabel"
            android:text="Passport"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_passport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/label_passport"
            android:layout_toLeftOf="@+id/button_passport">

            <EditText
                android:id="@+id/edit_text_passport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Passport Number"
                android:imeOptions="actionUnspecified"
                android:singleLine="true"
                android:inputType="number"
                android:layout_below="@+id/label_passport"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_passport"
            style="@style/DocumentUploadButton"
            android:text="UPLOAD"
            android:layout_alignBottom="@+id/text_input_passport" />
    </RelativeLayout>

</LinearLayout>