<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/description_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_card"
        android:layout_marginTop="@dimen/activity_horizontal_margin_card">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_card"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin_card"
            android:scaleType="centerCrop"
            android:src="@drawable/bank111"
            app:riv_border_color="@color/colorPrimary"
            app:riv_border_width="1dip"
            app:riv_corner_radius="50dip"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/bank_name"
            style="@style/TextStylePrimaryMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bank_account_verify_status"
            android:layout_toRightOf="@+id/portrait"
            android:singleLine="true" />

        <TextView
            android:id="@+id/bank_branch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_name"
            android:layout_toLeftOf="@+id/bank_account_verify_status"
            android:layout_toRightOf="@+id/portrait"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/bank_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_branch_name"
            android:layout_toLeftOf="@+id/bank_account_verify_status"
            android:layout_toRightOf="@+id/portrait"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/bank_account_verify_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/activity_horizontal_margin_card"
            android:paddingRight="@dimen/activity_horizontal_margin" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/description_holder"
        android:background="@color/colorDivider" />
</RelativeLayout>


