<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/value10"
        android:layout_marginRight="@dimen/value20"
        android:paddingBottom="@dimen/value5"
        android:paddingTop="@dimen/value5"
        android:src="@drawable/ic_number" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_toRightOf="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingTop="@dimen/value15"
        android:textSize="@dimen/text_size_small_medium">
    </EditText>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_space"
        android:background="@color/colorDivider"
        android:layout_below="@+id/icon"/>

</RelativeLayout>