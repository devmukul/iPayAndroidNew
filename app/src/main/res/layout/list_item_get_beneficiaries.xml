<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/value16"
            android:layout_marginRight="@dimen/value8"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_image"
            android:fontFamily="@font/open_sans_semibold"
            android:lineSpacingExtra="8sp"
            android:text="Source of fund request"
            android:textColor="#212121"
            android:textSize="12sp"
            tools:text="Source of fund request " />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/helper"
            android:layout_marginRight="@dimen/value16"
            android:layout_toRightOf="@id/profile_image"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:text="@string/helper"
            android:textColor="#888888"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginBottom="@dimen/value8"
            android:layout_toRightOf="@id/profile_image"
            android:fontFamily="sans-serif-medium"
            android:textColor="#333333"
            android:textSize="11sp"
            android:textStyle="normal"
            tools:text="2 min ago" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/time"
            android:layout_marginBottom="@dimen/value16"
            android:layout_toRightOf="@id/profile_image"
            android:background="#33acacac"></View>

        <TextView
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginRight="@dimen/value24"
            android:layout_toRightOf="@+id/profile_image"
            android:fontFamily="sans-serif-medium"
            android:text="ACCEPT"
            android:textColor="#00b5a5"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_toRightOf="@+id/accept"
            android:fontFamily="sans-serif-medium"
            android:text="REJECT"
            android:textColor="#f24002"
            android:layout_marginBottom="@dimen/value16"
            android:textSize="14sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider_end"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/reject"
            android:layout_marginBottom="@dimen/value16"
            android:layout_toRightOf="@id/profile_image"
            android:background="#33acacac"></View>
    </RelativeLayout>

</RelativeLayout>