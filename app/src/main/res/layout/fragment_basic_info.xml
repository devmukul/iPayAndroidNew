<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/value15">

        <TextView
            android:id="@+id/textview_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_name"
            android:gravity="center"
            android:text=""
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textview_verification_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_mobile_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Verified"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"/>
        <include layout="@layout/layout_progress_container" />

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Relative names -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_full_name_label"
                    style="@style/TextViewProfileInfoLabel"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/textview_name"
                    style="@style/TextViewProfileInfo"
                    android:layout_below="@+id/textview_mothers_name" />
            </LinearLayout>

            <View
                android:layout_below="@+id/icon"
                style="@style/Divider"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_dob_label"
                    style="@style/TextViewProfileInfoLabel"
                    android:text="@string/date_of_birth" />

                <TextView
                    android:id="@+id/textview_dob"
                    style="@style/TextViewProfileInfo"/>
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_below="@+id/icon"/>

            <!-- Spinners -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_occupation_label"
                    style="@style/TextViewProfileInfoLabel"
                    android:text="@string/occupation" />

                <TextView
                    android:id="@+id/textview_occupation"
                    style="@style/TextViewProfileInfo"/>
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_below="@+id/icon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_gender_label"
                    style="@style/TextViewProfileInfoLabel"
                    android:text="@string/gender" />

                <TextView
                    android:id="@+id/textview_gender"
                    style="@style/TextViewProfileInfo"/>
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_below="@+id/icon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_fathers_name_label"
                    style="@style/TextViewProfileInfoLabel"
                    android:text="@string/fathers_name"/>

                <TextView
                    android:id="@+id/textview_fathers_name"
                    style="@style/TextViewProfileInfo"/>
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_below="@+id/icon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_mothers_name_label"
                    style="@style/TextViewProfileInfoLabel"
                    android:text="@string/mothers_name" />

                <TextView
                    android:id="@+id/textview_mothers_name"
                    style="@style/TextViewProfileInfo"/>
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_below="@+id/icon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_signup_label"
                    style="@style/TextViewProfileInfoLabel"
                    android:text="@string/member_since" />

                <TextView
                    android:id="@+id/textview_signup"
                    style="@style/TextViewProfileInfo"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>