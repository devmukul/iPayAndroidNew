<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <include
        android:id="@+id/contact_portrait_view"
        layout="@layout/contact_portrait_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/verification_status"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_checkmark"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/name"
        style="@style/TextStylePrimaryMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/is_member"
        android:layout_toRightOf="@+id/contact_portrait_view"
        android:paddingBottom="2dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/original_name"
        style="@style/TextStylePrimaryMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/is_member"
        android:layout_toRightOf="@+id/contact_portrait_view"
        android:layout_below="@+id/name"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mobile_number"
        style="@style/TextStyleSecondaryMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/original_name"
        android:layout_toLeftOf="@+id/is_member"
        android:layout_toRightOf="@+id/contact_portrait_view"
        android:gravity="left"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignRight="@+id/is_member"
        android:layout_below="@+id/mobile_number"
        android:layout_marginRight="6dp"
        android:layout_toRightOf="@+id/contact_portrait_view"
        android:background="@color/colorDivider" />

    <ImageView
        android:id="@+id/is_member"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
        android:src="@drawable/ic_ipay_user"
        android:visibility="gone" />

    <TextView
        android:id="@+id/invite_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/brackgound_bottom_sheet_verified"
        android:text="@string/invited"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>