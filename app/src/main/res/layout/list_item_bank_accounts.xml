<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_horizontal_margin_card">

    <RelativeLayout
        android:id="@+id/description_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_card">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_card"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin_card"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:riv_border_color="@color/colorPrimary"
            app:riv_border_width="1dip"
            app:riv_corner_radius="50dip"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/bank_name"
            style="@style/TextStylePrimaryMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bank_account_verify_status"
            android:layout_toRightOf="@+id/portrait"
            android:singleLine="true" />

        <TextView
            android:id="@+id/bank_branch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_name"
            android:layout_toRightOf="@+id/portrait" />

        <TextView
            android:id="@+id/bank_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_branch_name"
            android:layout_toRightOf="@+id/portrait"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/bank_account_verify_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/activity_horizontal_margin" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_holder"
        android:layout_marginTop="@dimen/value10"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/value25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/remove_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="@dimen/value5"
                android:text="@string/remove"
                android:textSize="12sp" />

            <View
                android:id="@+id/verify_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorDivider" />

            <Button
                android:id="@+id/verify_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="@dimen/value5"
                android:text="@string/verify"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_space"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/options_layout"
        android:background="@color/colorDivider" />
</RelativeLayout>


