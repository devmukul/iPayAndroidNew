<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_touch_id" />

    <TextView
        android:id="@+id/touch_sensor_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin_card"
        android:text="@string/fingerprint_hint" />

    <TextView
        android:id="@+id/fingerprint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/touch_sensor_text_view"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_horizontal_margin_card"
        android:text="@string/fingerprint_description" />

    <RelativeLayout
        android:id="@+id/fingerprint_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fingerprint_description">

        <ImageView
            android:id="@+id/icon_touch_id"
            android:layout_width="@dimen/value25"
            android:layout_height="@dimen/value25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_touch_id" />

        <CheckBox
            android:id="@+id/fingerprint_option_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@id/icon_touch_id"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:drawableTint="@color/colorPrimary"
            android:text="@string/touch_id_for_login"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_small_medium" />
        </RelativeLayout>

</RelativeLayout>