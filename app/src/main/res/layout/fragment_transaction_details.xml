<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value4"
            android:orientation="horizontal"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                android:id="@+id/profile_picture"
                style="@style/ReviewImageStyle" />

            <ImageView
                android:id="@+id/other_image"
                style="@style/ReviewImageStyle.Dialog"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value6"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:layout_weight=".8"
                android:text="@string/transaction_id" />

            <TextView
                android:id="@+id/transaction_id"
                style="@style/TextViewInfoColorPrimary" />

        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            style="@style/LinearLayoutHolder"
            android:visibility="gone">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/your_number" />

            <TextView
                android:id="@+id/your_number"
                style="@style/TextViewInfoColorPrimary" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:layout_weight=".8"
                android:text="@string/time" />

            <TextView
                android:id="@+id/time"
                style="@style/TextViewInfoColorPrimary" />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewInfoLabel"
                android:layout_weight=".8"
                android:text="@string/description" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="@dimen/value10"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_small_medium" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/value4"
            android:background="@color/colorDividerGapGray" />

        <include layout="@layout/view_transaction_details_education_payment" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/amount" />

            <TextView
                android:id="@+id/amount"
                style="@style/TextViewInfoColorPrimary" />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/fee" />

            <TextView
                android:id="@+id/fee"
                style="@style/TextViewInfoColorPrimary" />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/net_amount" />

            <TextView
                android:id="@+id/netAmount"
                style="@style/TextViewInfoColorPrimary" />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/balance" />

            <TextView
                android:id="@+id/balance"
                style="@style/TextViewInfoColorPrimary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/value4"
            android:background="@color/colorDividerGapGray" />

        <LinearLayout
            android:id="@+id/purpose_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/LinearLayoutHolder">

                <TextView
                    style="@style/TextViewInfoLabel"
                    android:text="@string/purpose" />

                <TextView
                    android:id="@+id/purpose"
                    style="@style/TextViewInfoColorPrimary" />
            </LinearLayout>

            <View style="@style/Divider" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/status" />

            <TextView
                android:id="@+id/status"
                style="@style/TextViewInfoColorPrimary" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>