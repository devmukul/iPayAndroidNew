<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/bg_home">

                <ImageView
                    android:id="@+id/iPay_logo"
                    android:layout_width="@dimen/value110"
                    android:layout_height="@dimen/value110"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/value5"
                    android:src="@drawable/ic_logo_ipay_full_size" />

                <TextView
                    android:id="@+id/iPay_name"
                    style="@style/TextStylePrimaryLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iPay_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/value5"
                    android:text="@string/iPay_system"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/textview_build_number"
                    style="@style/TextStyleSecondaryMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iPay_name"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_extra_small" />

            </RelativeLayout>

            <LinearLayout
                style="@style/ProfileCardLayoutStyle"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <bd.com.ipay.ipayskeleton.CustomView.IconifiedTextViewWithButton
                    android:id="@+id/button_add_trusted_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_contact3x"
                    android:paddingBottom="@dimen/value4"
                    android:paddingLeft="@dimen/activity_horizontal_margin_card"
                    android:paddingTop="@dimen/value4"
                    android:text="Add this device as trusted" />

                <View style="@style/Divider" />

                <bd.com.ipay.ipayskeleton.CustomView.IconifiedTextViewWithButton
                    android:id="@+id/button_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_terms3x"
                    android:paddingBottom="@dimen/value4"
                    android:paddingLeft="@dimen/activity_horizontal_margin_card"
                    android:paddingTop="@dimen/value4"
                    android:text="Log out" />

                <View style="@style/Divider" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>