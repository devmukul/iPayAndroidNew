<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dip"
        android:orientation="vertical"
        android:paddingStart="16dip"
        android:paddingLeft="16dip"
        android:paddingEnd="16dip"
        android:paddingRight="16dip">

        <LinearLayout
            android:id="@+id/original_balance_view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/original_balance_title_text_view"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dip"
                android:layout_marginRight="4dip"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:gravity="start|center_vertical"
                android:textColor="#333333"
                tools:text="@string/total_outstanding" />

            <TextView
                android:id="@+id/original_balance_text_view"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dip"
                android:layout_marginLeft="4dip"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="end|center_vertical"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="@string/dummy_amount" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/debitable_balance_view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/debitable_balance_title_text_view"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dip"
                android:layout_marginRight="4dip"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:gravity="start|center_vertical"
                android:textColor="#333333"
                tools:text="@string/minimum_pay" />

            <TextView
                android:id="@+id/debitable_balance_text_view"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dip"
                android:layout_marginLeft="4dip"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="end|center_vertical"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="@string/dummy_amount" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="12dip"
        android:background="#80acacac" />

    <LinearLayout
        android:id="@+id/final_balance_view_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingStart="16dip"
        android:paddingLeft="16dip"
        android:paddingEnd="16dip"
        android:paddingRight="16dip"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/final_balance_title_text_view"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dip"
            android:layout_marginRight="4dip"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_light"
            android:gravity="start|center_vertical"
            android:textColor="#333333"
            tools:text="@string/total_outstanding" />

        <TextView
            android:id="@+id/final_balance_text_view"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dip"
            android:layout_marginLeft="4dip"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="end|center_vertical"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="@string/dummy_amount" />
    </LinearLayout>

</LinearLayout>