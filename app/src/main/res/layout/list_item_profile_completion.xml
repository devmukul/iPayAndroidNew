<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/profile_completion_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin_card"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin_card"
        android:paddingTop="@dimen/activity_vertical_margin_card">

        <ImageView
            android:id="@+id/profile_completion_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/value20"
            android:src="@drawable/ic_signup_personal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/verification_status"
            android:layout_toRightOf="@+id/profile_completion_icon"
            android:orientation="vertical"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/text_size_small_medium" />

            <TextView
                android:id="@+id/textview_current_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/verification_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/activity_horizontal_margin_card"
            android:src="@drawable/ic_checkmark" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_space"
        android:layout_below="@+id/profile_completion_holder"
        android:background="@color/colorDivider"
        android:layout_marginLeft="@dimen/value48"
        android:paddingRight="@dimen/activity_horizontal_margin_card"
        android:paddingTop="@dimen/activity_horizontal_margin_card"
        android:paddingBottom="@dimen/activity_horizontal_margin_card"/>
</RelativeLayout>