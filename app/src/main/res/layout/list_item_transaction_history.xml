<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value5"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/value10"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/value10">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_transaction_history"
        app:riv_border_color="@color/colorPrimary"
        app:riv_corner_radius="50dip"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/activity_description"
        style="@style/TextStylePrimarySmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/portrait"
        android:gravity="left"
        android:text="Description" />

    <TextView
        android:id="@+id/purpose"
        style="@style/TextStyleSecondarySmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_description"
        android:layout_toRightOf="@+id/portrait"
        android:gravity="left"
        android:text="purpose" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purpose"
        android:layout_toRightOf="@+id/portrait"
        android:text="Time"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/purpose"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="@dimen/value10"
            android:src="@drawable/ic_error_black_24dp"
            android:tint="@color/background_red" />

        <TextView
            android:id="@+id/amount"
            style="@style/TextStylePrimarySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100" />
    </LinearLayout>

</RelativeLayout>