<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/payable_item_name"
        style="@style/TextStylePrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_picture"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/payable_item_description"
        style="@style/TextStylePrimarySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payable_item_name"
        android:layout_toRightOf="@+id/profile_picture" />

    <TextView
        android:id="@+id/amount"
        style="@style/TextStylePrimarySmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payable_item_description"
        android:layout_toRightOf="@+id/profile_picture"
        android:gravity="left" />

    <View
        android:id="@+id/divider"
        style="@style/DividerWithoutMargin"
        android:layout_below="@id/amount"
        android:paddingBottom="@dimen/value10"
        android:paddingTop="@dimen/value10" />

</RelativeLayout>