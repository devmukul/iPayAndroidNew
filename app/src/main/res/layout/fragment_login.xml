<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ipay_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_card"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                android:id="@+id/profile_picture"
                android:layout_width="@dimen/login_profile_image_size"
                android:layout_height="@dimen/login_profile_image_size"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/value30"/>

            <bd.com.ipay.ipayskeleton.CustomView.IconifiedEditText
                android:id="@+id/login_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_number"
                android:hint="@string/prompt_mobile"
                android:inputType="phone"
                android:maxLength="14"
                custom:borderType="up">

            </bd.com.ipay.ipayskeleton.CustomView.IconifiedEditText>

            <bd.com.ipay.ipayskeleton.CustomView.IconifiedEditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_password"
                android:hint="@string/prompt_password_new"
                android:inputType="textPassword"
                custom:borderType="down">

            </bd.com.ipay.ipayskeleton.CustomView.IconifiedEditText>


            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PrimaryButton"
                android:imeOptions="actionDone"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/action_login"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/join_us_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="left|center_vertical"
                    android:text="@string/join_us"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGray"
                    android:textSize="@dimen/text_size_small" />

                <Button
                    android:id="@+id/forget_password_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical|right"
                    android:text="@string/forgot_password"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGray"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>