<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trending_business_list_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_gray">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
            android:layout_marginRight="@dimen/activity_horizontal_margin_card"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:paddingLeft="@dimen/activity_horizontal_margin_card"
                android:paddingRight="@dimen/value5"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:singleLine="true"
                android:text="@string/top"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/topUpView"
                    android:layout_width="@dimen/value80"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin_card"
                    android:elevation="@dimen/value2"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/semiround_white_default"
                        android:padding="@dimen/value15"
                        android:src="@drawable/background_icon_topup_home" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                        android:ellipsize="marquee"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="@string/mobile_topup"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_extra_smaller_value11" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payByQCView"
                    android:layout_width="@dimen/value80"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin_card"
                    android:elevation="@dimen/value2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/semiround_white_default"
                        android:padding="@dimen/value15"
                        android:src="@drawable/background_icon_pay_by_qc_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                        android:ellipsize="marquee"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="@string/pay_by_QR_code"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_extra_smaller_value11" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/requestPaymentView"
                    android:layout_width="@dimen/value80"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin_card"
                    android:elevation="@dimen/value2"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/value70"
                        android:layout_height="@dimen/value70"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/semiround_white_default"
                        android:padding="@dimen/value15"
                        android:src="@drawable/background_icon_request_payment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                        android:ellipsize="marquee"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="@string/request_payment"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_extra_smaller_value11" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scrollViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>