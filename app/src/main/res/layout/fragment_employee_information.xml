<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/name_and_role_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/searched_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight=".8">
            <EditText
                android:id="@+id/mobile_number"
                style="@style/EditTextForBussinessManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number"
                android:inputType="phone" />

            <ImageView
                android:id="@+id/select_mobile_number_from_contacts"
                style="@style/ButtonStyleWithIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_book3x" />
        </RelativeLayout>

        <EditText
            android:id="@+id/role_edit_text"
            style="@style/EditTextForBussinessManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:clickable="true"
            android:focusable="false"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:drawableRight="@drawable/dropdown_arrow"
            android:text="@string/role" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_text_view"
        android:layout_below="@id/name_and_role_layout"
        android:text="@string/your_assignee_can_do"
        android:visibility="gone"
        android:textSize="@dimen/text_size_small_medium"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/privilege_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_continue"
        android:layout_below="@+id/description_text_view"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

    <Button
        android:id="@+id/button_continue"
        style="@style/ButtonPrimaryWithNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/next" />

</RelativeLayout>