<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/profile_pic_upload_helper_title"
                style="@style/OnBoardPageTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboard_get_introduced_upload_title"
                android:layout_marginTop="@dimen/onboard_page_vertical_margin"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/onboard_page_vertical_margin"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_onboard_ask_for_introduction_helper"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/onboard_page_vertical_margin"
                android:layout_marginLeft="@dimen/onboard_page_description_horizontal_margin"
                android:layout_marginRight="@dimen/onboard_page_description_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/onboard_page_vertical_margin"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_onboard_ask_for_introduction_helper_small"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/onboard_photo_id_upload_helper_text"
                    style="@style/OnBoardPageDescriptionTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboard_ask_for_introduction_text"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryButton">

        <Button
            android:id="@+id/button_skip"
            style="@style/ButtonTransparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/skip_now"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin_double"/>

        <Button
            android:id="@+id/button_add_basic_info"
            style="@style/ButtonTransparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ask_introduction"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/activity_horizontal_margin_double"/>


    </LinearLayout>

</RelativeLayout>


