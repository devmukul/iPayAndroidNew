<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_progress_container" />

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value15"
        android:orientation="vertical">

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/business_name" />

            <TextView
                android:id="@+id/textview_business_name"
                style="@style/TextViewInfoColorPrimary" />

        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/mobile_number" />

            <TextView
                android:id="@+id/textview_business_mobile_number"
                style="@style/TextViewInfoColorPrimary" />

        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/email" />

            <TextView
                android:id="@+id/textview_business_email"
                style="@style/TextViewInfoColorPrimary" />

        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout style="@style/LinearLayoutHolder">

            <TextView
                style="@style/TextViewInfoLabel"
                android:text="@string/business_type" />

            <TextView
                android:id="@+id/textview_business_type"
                style="@style/TextViewInfoColorPrimary" />

        </LinearLayout>

        <View style="@style/Divider" />

    </LinearLayout>
</FrameLayout>