<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_list_operator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/value5">

    <ImageView
        android:id="@+id/operator_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/value10" />

    <TextView
        android:id="@+id/textview_operator_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/operator_imageView"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_small_medium" />

    <View style="@style/DividerWithoutMargin" />
</RelativeLayout>


