<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bg_pcode"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/value20"
                    android:paddingLeft="@dimen/activity_horizontal_margin_double"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/value20">

                    <RelativeLayout
                        android:id="@+id/profile_picture_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <ProgressBar
                            android:id="@+id/circular_progress_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/profile_picture_progress_bar"
                            android:secondaryProgress="100" />

                        <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                        </bd.com.ipay.ipayskeleton.CustomView.ProfileImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin_semi_double"
                        android:layout_toRightOf="@+id/profile_picture_holder">

                        <LinearLayout
                            android:id="@+id/name_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/value2"
                                android:fontFamily="sans-serif-thin"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/verification_status"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
                                android:layout_toRightOf="@+id/textview_name"
                                android:src="@drawable/ic_verified_profile"
                                android:visibility="gone" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textview_mobile_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name_layout"
                            android:layout_marginBottom="@dimen/value2"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_completion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:visibility="gone">

                    <bd.com.ipay.ipayskeleton.CustomView.CircularProgressBar
                        android:id="@+id/profile_completion_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin_card"
                        android:paddingTop="@dimen/activity_vertical_margin_card">

                    </bd.com.ipay.ipayskeleton.CustomView.CircularProgressBar>

                    <TextView
                        android:id="@+id/profile_completion_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
                        android:layout_marginRight="@dimen/activity_horizontal_margin_card"
                        android:layout_toRightOf="@+id/profile_completion_percentage"
                        android:gravity="center"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/button_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:src="@drawable/ic_close_black_24dp"
                        android:tint="@color/colorPrimary" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorBackgroundButtonWithOpacity"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_horizontal_margin_card"
                android:paddingLeft="@dimen/activity_horizontal_margin_double"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin_card">

                <TextView
                    android:id="@+id/balance_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/ipay_balance"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/balance_label"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/loading"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/refresh_balance_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/white"
                    android:clickable="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_home_refresh" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_add_money"
                    style="@style/HomeBalanceButtonBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />

                    <TextView
                        style="@style/HomeBalanceButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_money" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/button_withdraw_money"
                    style="@style/HomeBalanceButtonBackground">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_withdraw" />

                    <TextView
                        style="@style/HomeBalanceButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_money" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <Button
                        android:id="@+id/button_send_money"
                        style="@style/HomeImageButtonStyleHorizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home_send"
                        android:text="@string/send_money" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorDivider" />

                    <Button
                        android:id="@+id/button_request_money"
                        style="@style/HomeImageButtonStyleHorizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home_rcv"
                        android:text="@string/request_money" />
                </LinearLayout>

                <View style="@style/HomeDividerStyleColorGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <Button
                        android:id="@+id/button_mobile_topup"
                        style="@style/HomeImageButtonStyleHorizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home_topup"
                        android:text="@string/mobile_topup" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorDivider" />

                    <Button
                        android:id="@+id/button_pay_by_QR_code"
                        style="@style/HomeImageButtonStyleHorizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home_qrc"
                        android:text="@string/pay_by_QR_code" />

                </LinearLayout>

                <View style="@style/HomeDividerStyleColorGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/button_make_payment"
                        style="@style/HomeImageButtonStyleHorizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home_payment"
                        android:text="@string/make_payment"
                        android:visibility="gone" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorDivider" />

                    <Button
                        android:id="@+id/button_create_invoice"
                        style="@style/HomeImageButtonStyleHorizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home_rcv"
                        android:text="@string/request_payment"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    style="@style/HomeDividerStyleColorGrey"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>