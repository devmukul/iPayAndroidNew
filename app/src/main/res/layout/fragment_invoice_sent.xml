<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/value5"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/value10"
            android:text="@string/invoices_sent"
            android:textStyle="bold" />

    </RelativeLayout>

    <bd.com.ipay.ipayskeleton.Customview.CustomSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_invoice_sent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </bd.com.ipay.ipayskeleton.Customview.CustomSwipeRefreshLayout>

</LinearLayout>