<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_pcode"
    android:padding="@dimen/activity_horizontal_margin_card"
    tools:context=".Activities.TourActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/tour_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pager_indicator" />

    <bd.com.ipay.ipayskeleton.CustomView.PagerIndicator
        android:id="@+id/pager_indicator"
        android:layout_above="@+id/button_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:id="@+id/button_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_vertical_margin_card"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_sign_in"
            style="@style/PrimaryTransparentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_in" />

        <Button
            android:id="@+id/button_join_now"
            style="@style/PrimaryTransparentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_card" />

    </LinearLayout>

</RelativeLayout>