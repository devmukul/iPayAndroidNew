<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/package_radio_button"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin_card"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/package_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/value16"
            android:layout_toRightOf="@+id/package_radio_button"
            android:textSize="13sp"
            android:textColor="#212121"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/package_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/package_name"
            android:layout_toRightOf="@id/package_radio_button"
            android:textSize="13sp"
            android:textColor="#212121"/>
    </RelativeLayout>
</LinearLayout>