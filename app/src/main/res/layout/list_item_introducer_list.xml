<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
    android:layout_marginRight="@dimen/activity_horizontal_margin_card" >

    <include
        android:id="@+id/profile_picture"
        layout="@layout/contact_portrait_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"

        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:id="@+id/description_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/profile_picture"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/introducer_name"
            style="@style/TextStylePrimaryMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/introducer_mobile_number"
            style="@style/TextStyleSecondaryMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time"
            style="@style/TextStyleSecondarySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_space"
        android:background="@color/colorDivider"
        android:layout_below="@+id/description_holder"
        />

</RelativeLayout>