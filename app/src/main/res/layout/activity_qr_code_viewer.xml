<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/drawing_cache_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/ef_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_qr_code_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-5dp"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:text="scan me"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/value40" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_layout">

            <ImageView
                android:id="@+id/qr_code_imageview"
                android:layout_width="@dimen/value150"
                android:layout_height="@dimen/value150"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
            <ImageView
                android:layout_width="@dimen/value34"
                android:layout_height="@dimen/value34"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_qr_ipay_logo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_qr_code_lower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:text="to pay me"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/value34" />
    </LinearLayout>

    <Button
        android:id="@+id/share_button"
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/value40"
        android:text="@string/share" />
</LinearLayout>
