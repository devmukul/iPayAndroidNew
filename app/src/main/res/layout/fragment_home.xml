<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_send_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/button_send_money"
                    style="@style/HomeImageButtonStyle"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/send_money" />

                <TextView
                    style="@style/HomeImageTextViewStyle"
                    android:layout_below="@+id/button_send_money"
                    android:text="@string/send_money" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_request_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/button_request_money"
                    style="@style/HomeImageButtonStyle"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/request_money" />

                <TextView
                    style="@style/HomeImageTextViewStyle"
                    android:layout_below="@+id/button_request_money"
                    android:text="@string/request_money" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_make_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.34"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/button_make_payment"
                    style="@style/HomeImageButtonStyle"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/make_payment" />

                <TextView
                    android:id="@+id/textview_make_payment"
                    style="@style/HomeImageTextViewStyle"
                    android:layout_below="@+id/button_make_payment"
                    android:text="@string/make_payment" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/account_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/balance"
                    style="@style/TextStylePrimaryLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/refresh_balance_button"
                    android:text="Balance: Tk. 0.00"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/refresh_balance_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/ic_refresh_black_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_add_money"
                        style="@style/HomeBalanceButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add_money" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorDivider" />

                    <Button
                        android:id="@+id/button_withdraw_money"
                        style="@style/HomeBalanceButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/withdraw_money" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_transaction_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>