<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/button_margin"
    android:paddingRight="@dimen/button_margin">

    <TextView
        style="@style/HeaderTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value15"
        android:text="@string/ready_to_get_started" />

    <TextView
        style="@style/DescriptionTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value20"
        android:text="@string/getting_started_description" />

    <Button
        android:id="@+id/button_account_type_personal"
        style="@style/ButtonLightGreenShapedOval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value15"
        android:text="@string/personal_account" />

    <Button
        android:id="@+id/button_account_type_business"
        style="@style/ButtonLightGrayMediumShapedOval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/business_account" />

</LinearLayout>
