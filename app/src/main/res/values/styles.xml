    <!-- Tab -->
    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="TabStyleDashBoard" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@color/colorTabPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TextAppearanceForDashBoard</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
