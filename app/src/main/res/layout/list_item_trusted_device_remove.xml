<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_list_item_trusted_device"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center|center_vertical"
    android:paddingTop="@dimen/value15">

    <LinearLayout
        android:id="@+id/trusted_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trusted_device_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/trusted_device_imageView"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_device_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:singleLine="true"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_small_medium" />

            <TextView
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:singleLine="true"
                android:textSize="@dimen/text_size_extra_small" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/remove_trusted_device_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingRight="@dimen/activity_horizontal_margin_card"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/divider_gray" />
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/trusted_device" />
</RelativeLayout>

