<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_cancel_black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cancel_button"
        android:layout_marginTop="@dimen/value40">

        <ImageView
            android:id="@+id/success"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_primary_circle"
            app:srcCompat="@drawable/ic_check"></ImageView>

        <TextView
            android:id="@+id/amount_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success"
            android:layout_marginTop="@dimen/value20"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_text_view"
            android:textColor="@color/colorBlack87"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:id="@+id/picture_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text_view"
            android:layout_marginLeft="@dimen/value40"
            android:layout_marginRight="@dimen/value40"

            android:layout_marginTop="@dimen/value20"
            android:orientation="horizontal"
            android:weightSum="3">

            <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                android:id="@+id/profile_picture_sender"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/name_text_view"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"></bd.com.ipay.ipayskeleton.CustomView.ProfileImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_arrow_forward" />

            <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
                android:id="@+id/profile_picture_receiver"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/name_text_view"
                android:layout_toRightOf="@+id/profile_picture_sender"
                android:layout_weight="1"></bd.com.ipay.ipayskeleton.CustomView.ProfileImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/success_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture_layout"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:text="@string/send_money_success_description"
            android:textSize="@dimen/text_size_small" />


    </RelativeLayout>

</RelativeLayout>