<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/trending_business_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:paddingLeft="@dimen/activity_horizontal_margin_card"
        android:paddingRight="@dimen/value5"
        android:paddingBottom="@dimen/value8"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_small" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/trending_business_category_title"
        android:id="@+id/trending_business_recycler_view_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
