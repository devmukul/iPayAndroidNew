<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout style="@style/ProfileCardLayoutStyle">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="14dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person"
        app:riv_border_color="@color/colorPrimary"
        app:riv_border_width="1dip"
        app:riv_corner_radius="75dip"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/introducer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_picture"
        android:paddingLeft="20dp"
        android:layout_centerVertical="true"
        style="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorTextPrimary"
        android:text="Mohsin Khan"/>

    <TextView
        android:id="@+id/introducer_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textview_name"
        style="?android:attr/textAppearanceMedium"
        android:text="+8801919191919"
        android:gravity="right"/>

    </RelativeLayout>
</RelativeLayout>