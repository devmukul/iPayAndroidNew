<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/activity_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_money_proceed_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/value15">

            <LinearLayout
                android:id="@+id/customer_id_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/CustomTextInputLayout">

                    <EditText
                        android:id="@+id/customer_id_edit_text"
                        style="@style/CustomEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_amount"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/Divider"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>

                <TextView
                    android:id="@+id/message_text_view"
                    style="@style/CustomNoteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_money_from_bank_info"
                    android:gravity="left"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_money_option_selector_view_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/user_info_view_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mahbub Hasan Mukul"
                            android:gravity="left"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/package_type_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="( POSTPAID )"
                            android:gravity="left"
                            android:layout_marginLeft="@dimen/value5"
                            android:textSize="12sp"
                            android:textColor="#88CD7A"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/acount_id_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account ID : 124576366"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:textColor="#212121"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/postpaid_bill_view_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/CustomTextInputLayout">

                        <EditText
                            android:id="@+id/amount_edit_text"
                            style="@style/CustomEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_amount"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"/>
                    </android.support.design.widget.TextInputLayout>

                    <View style="@style/Divider"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prepaid_package_selector_view_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp">

                    <bd.com.ipay.ipayskeleton.CustomView.BankSelectorView
                        android:id="@+id/bank_selector_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:hint="@string/bank_account"
                        custom:selectorDialogTitle="@string/bank_account" />

                    <View style="@style/Divider"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp" />

                </LinearLayout>
            </LinearLayout>]

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/add_money_proceed_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_add_money"
        android:background="@color/colorPrimaryButton"
        android:textColor="@color/colorPrimaryButtonText"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>