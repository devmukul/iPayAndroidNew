<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/notification_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin_card">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/portrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/activity_vertical_margin_card"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_transaction_history"
                android:visibility="gone"
                app:riv_border_color="@color/colorPrimary"
                app:riv_corner_radius="50dip"
                app:riv_oval="false" />

            <TextView
                android:id="@+id/title"
                style="@style/TextStylePrimarySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/portrait"
                android:text="dsadsads"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                style="@style/TextStylePrimarySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@+id/portrait"
                android:text="dsads" />

            <TextView
                android:id="@+id/time"
                style="@style/TextStylePrimarySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_toRightOf="@+id/portrait"
                android:text="dasdsa" />

            <LinearLayout
                android:id="@+id/options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_marginTop="@dimen/value10"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value25"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/accept_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/value5"
                        android:text="@string/verify"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorDivider" />

                    <Button
                        android:id="@+id/reject_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/value5"
                        android:text="@string/reject"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/view_2"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorDivider"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/mark_as_spam_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/value5"
                        android:text="@string/mark_as_spam"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>