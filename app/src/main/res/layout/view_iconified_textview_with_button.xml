<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/value20"
        android:paddingBottom="@dimen/value5"
        android:paddingTop="@dimen/value5"
        android:src="@drawable/ic_number" />

    <TextView
        android:id="@id/textView"
        style="@style/TextStylePrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_centerVertical="true"
        android:text="@string/set_pin"
        android:textSize="@dimen/text_size_small_medium"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin_card"
        android:src="@drawable/ic_arrow2" />
</RelativeLayout>

