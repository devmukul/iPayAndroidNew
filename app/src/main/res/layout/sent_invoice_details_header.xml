<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin_card"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <bd.com.ipay.ipayskeleton.CustomView.ProfileImageView
            android:id="@+id/profile_picture"
            style="@style/ReviewImageStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_name"
                style="@style/TextViewUserInfoPrimary"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textview_mobile_number"
                style="@style/TextViewUserInfoSecondary" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextViewInfoLabel"
            android:layout_weight=".8"
            android:text="@string/invoice_id" />

        <TextView
            android:id="@+id/invoice_id"
            style="@style/TextViewInfoColorPrimary" />

    </RelativeLayout>

    <View style="@style/Divider" />

    <LinearLayout style="@style/LinearLayoutHolder">

        <TextView
            style="@style/TextViewInfoLabel"
            android:layout_weight=".8"
            android:text="@string/time" />

        <TextView
            android:id="@+id/time"
            style="@style/TextViewInfoColorPrimary" />
    </LinearLayout>

    <View style="@style/Divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/description_holder"
            style="@style/TextViewInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/description" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_holder"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingBottom="@dimen/value10"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small_medium" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value20"
        android:background="@color/colorDividerGapGray">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewInfoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/item"
                android:textStyle="bold" />

            <TextView
                style="@style/ReviewItemLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/quantity"
                android:textStyle="bold" />

            <TextView
                style="@style/TextViewInfo"
                android:layout_weight="1"
                android:text="@string/amount"
                android:textStyle="bold" />
        </LinearLayout>

        <View style="@style/Divider" />
    </LinearLayout>

</LinearLayout>