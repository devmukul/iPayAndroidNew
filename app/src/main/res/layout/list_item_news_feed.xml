<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value5"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/value5"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/value5">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:padding="@dimen/value2"
        android:scaleType="fitXY"
        android:src="@drawable/dummy"
        android:transitionName="@string/transition_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/news_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title"
            style="@style/TextStylePrimarySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:transitionName="@string/transition_title" />

        <TextView
            android:id="@+id/short_news"
            style="@style/TextStyleSecondarySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:transitionName="@string/transition_sub_title" />

        <TextView
            android:id="@+id/short_desc"
            style="@style/TextStyleSecondarySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:transitionName="@string/transition_sub_title" />
    </LinearLayout>


</RelativeLayout>