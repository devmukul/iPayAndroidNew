<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin_card"
            android:paddingLeft="@dimen/activity_horizontal_margin_card"
            android:paddingTop="@dimen/activity_horizontal_margin_card">

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textview_name"
                        style="@style/TextStyleSecondaryMedium"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/textview_mobile_number"
                        style="@style/TextStyleSecondaryMedium"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/textview_relationship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:singleLine="true" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textview_is_trusted_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:text="@string/trusted_member"/>

                <ImageButton
                    android:id="@+id/button_make_recovery_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/background_list_item_circle"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_add_circle_outline"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>