<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="14.0">

            <gradient
                android:startColor="#AEC6CF"
                android:endColor="#E5E4E2"
                android:centerColor="#E5E4E2"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="14.0">
            <gradient
                android:centerColor="#6495ED"
                android:centerY="0.50"
                android:endColor="#F0F8FF"
                android:startColor="#002FA7"
                android:type="sweep"
                android:useLevel="false" />
        </shape>
    </item>
</layer-list>
