<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollViewHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider_gray"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/value5"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="@string/top"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/topUpView"
                android:layout_width="@dimen/value100"
                android:layout_height="@dimen/value120"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
                android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                android:background="@drawable/semiround_white_default"
                android:elevation="@dimen/value2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/value60"
                    android:layout_height="@dimen/value60"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/value15"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value20"
                    android:layout_marginTop="@dimen/value15"
                    android:src="@drawable/background_icon_topup" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value1"
                    android:background="@color/divider_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                    android:ellipsize="marquee"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin_card"
                    android:paddingRight="@dimen/activity_horizontal_margin_card"
                    android:text="@string/mobile_topup"
                    android:textSize="@dimen/text_size_extra_smaller_value11"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/payByQCView"
                android:layout_width="@dimen/value100"
                android:layout_height="@dimen/value120"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
                android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                android:background="@drawable/semiround_white_default"
                android:elevation="@dimen/value2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/value60"
                    android:layout_height="@dimen/value60"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/value15"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value20"
                    android:layout_marginTop="@dimen/value15"
                    android:src="@drawable/background_icon_pay_by_qc" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value1"
                    android:background="@color/divider_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                    android:ellipsize="marquee"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin_card"
                    android:paddingRight="@dimen/activity_horizontal_margin_card"
                    android:text="@string/pay_by_QR_code"
                    android:textSize="@dimen/text_size_extra_smaller_value11"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/requestPaymentView"
                android:layout_width="@dimen/value100"
                android:layout_height="@dimen/value120"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_card"
                android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                android:background="@drawable/semiround_white_default"
                android:elevation="@dimen/value2"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/value60"
                    android:layout_height="@dimen/value60"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/value15"
                    android:layout_marginLeft="@dimen/value20"
                    android:layout_marginRight="@dimen/value20"
                    android:layout_marginTop="@dimen/value15"
                    android:src="@drawable/background_icon_request_payment" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value1"
                    android:background="@color/divider_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_card"
                    android:ellipsize="marquee"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin_card"
                    android:paddingRight="@dimen/activity_horizontal_margin_card"
                    android:text="@string/request_payment"
                    android:textSize="@dimen/text_size_extra_smaller_value11"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>